
    <%- include('header'); -%>


    <div class="container ">
        <form action="/update" method="post">
            <label >Name</label> <br>
            <input type="text" name="postTitle" class="form-control" value="<%= post.title %>" ><br>
            <label >Description</label> <br>
            <textarea name="postDescription" class="form-control" rows="6"><%= post.description %></textarea> <br>
            <label >Link</label> <br>
            <input type="text" name="postLink" class="form-control" value="<%= post.link %>"><br>
            <button type="submit" class="btn btn-primary" name="id" value="<%= post._id %>" >Update</button> 
        </form>
    </div>
