
<% if( accountType  === "student"){ %>
      <%- include('header1'); -%>
<% }else{ %>
      <%- include('header'); -%>
<% } %>

<div class="container text-center">
      <h1>JOBS</h1>
      <hr>
    </div>  
    <div class="container">
      <% posts.forEach(function(post){ %>
        <div class="container">
          <h5><%= post.author %> <small> from <%= post.company %> </small>  </h5>
          <h4><%= post.title %></h4>
          <p><%= post.description.substring(0,100)+ "..." %>
            <a href="/posts/<%= post._id %>">read more</a>
          </p>
          <hr>
        </div>
          
       <% }); %> 
    </div>

<%- include('footer'); -%>
